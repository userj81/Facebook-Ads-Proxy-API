{
  "template_id": "lead_generation",
  "name": "Gera칞칚o de Leads",
  "description": "Template para campanha focada em captura de leads (formul치rio nativo)",
  "objective": "OUTCOME_LEADS",
  "flow": [
    {
      "step": 1,
      "action": "create_campaign",
      "endpoint": "/{api_version}/{account_id}/campaigns",
      "method": "POST",
      "body": {
        "name": "{{campaign_name}}",
        "objective": "OUTCOME_LEADS",
        "status": "PAUSED",
        "special_ad_categories": []
      },
      "save_as": "campaign_id"
    },
    {
      "step": 2,
      "action": "create_leadgen_form",
      "endpoint": "/{api_version}/{page_id}/leadgen_forms",
      "method": "POST",
      "body": {
        "name": "{{form_name}}",
        "customized_disclaimer": "{{disclaimer_text}}",
        "context_card_ad_headline": "{{headline}}",
        "questions": [
          {
            "type": "EMAIL",
            "label": "E-mail"
          },
          {
            "type": "PHONE",
            "label": "Telefone"
          }
        ],
        "follow_up_action_url": "{{thank_you_url}}"
      },
      "save_as": "form_id"
    },
    {
      "step": 3,
      "action": "create_adset",
      "endpoint": "/{api_version}/{campaign_id}/adsets",
      "method": "POST",
      "body": {
        "name": "{{adset_name}}",
        "campaign_id": "{{campaign_id}}",
        "optimization_goal": "LEADS",
        "billing_event": "IMPRESSIONS",
        "targeting": {
          "geo_locations": {
            "countries": ["BR"]
          },
          "age_min": 25,
          "age_max": 60,
          "genders": [2],
          "publisher_platforms": ["facebook", "instagram"]
        },
        "status": "PAUSED",
        "promoted_object": {
          "page_id": "{{page_id}}"
        }
      },
      "save_as": "adset_id"
    },
    {
      "step": 4,
      "action": "create_creative",
      "endpoint": "/{api_version}/{account_id}/adcreatives",
      "method": "POST",
      "body": {
        "name": "{{creative_name}}",
        "object_story_spec": {
          "page_id": "{{page_id}}",
          "link_data": {
            "message": "{{ad_text}}",
            "lead_gen_form_id": "{{form_id}}",
            "image_hash": "{{image_hash}}"
          }
        }
      },
      "save_as": "creative_id"
    },
    {
      "step": 5,
      "action": "create_ad",
      "endpoint": "/{api_version}/{adset_id}/ads",
      "method": "POST",
      "body": {
        "name": "{{ad_name}}",
        "adset_id": "{{adset_id}}",
        "creative": {"creative_id": "{{creative_id}}"},
        "status": "PAUSED"
      },
      "save_as": "ad_id"
    }
  ],
  "required_params": {
    "campaign_name": "Nome da campanha",
    "adset_name": "Nome do conjunto de an칰ncios",
    "form_name": "Nome do formul치rio",
    "headline": "Headline do an칰ncio",
    "disclaimer_text": "Texto de disclaimer (opcional)",
    "thank_you_url": "URL de agradecimento ap칩s formul치rio",
    "page_id": "ID da p치gina do Facebook",
    "creative_name": "Nome do criativo",
    "ad_text": "Texto do an칰ncio",
    "image_hash": "Hash da imagem",
    "ad_name": "Nome do an칰ncio"
  },
  "examples": {
